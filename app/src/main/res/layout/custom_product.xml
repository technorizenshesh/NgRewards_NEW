<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/product_img"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:scaleType="fitXY"
                android:src="@drawable/stove" />

            <main.com.ngrewards.fonttypeclasses.NoramlTextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="Stove"
                android:textColor="@color/black"
                android:textSize="@dimen/medium" />

            <main.com.ngrewards.fonttypeclasses.LightTextView
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                android:textSize="@dimen/extrasmall" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:srcCompat="@drawable/star_col" />

                <ImageView
                    android:layout_width="15dp"

                    android:layout_height="15dp"
                    android:layout_marginLeft="3dp"
                    app:srcCompat="@drawable/star_col" />

                <ImageView
                    android:layout_width="15dp"

                    android:layout_height="15dp"
                    android:layout_marginLeft="3dp"
                    app:srcCompat="@drawable/star_col" />

                <ImageView
                    android:layout_width="15dp"

                    android:layout_height="15dp"
                    android:layout_marginLeft="3dp"
                    app:srcCompat="@drawable/star_col" />

                <ImageView
                    android:layout_width="15dp"

                    android:layout_height="15dp"
                    android:layout_marginLeft="3dp"
                    app:srcCompat="@drawable/star" />

            </LinearLayout>

            <main.com.ngrewards.fonttypeclasses.NoramlTextView
                android:id="@+id/paybill"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/pinkborder_rectangle"
                android:gravity="center"
                android:text="@string/paybill_t"
                android:textColor="@color/white"
                android:textSize="@dimen/medium" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>