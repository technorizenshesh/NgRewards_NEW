<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout

            android:padding="7dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_toLeftOf="@+id/cashlay"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:id="@+id/weeknumber_tv"
                    android:layout_width="match_parent"
                    android:text="Week 10/53"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium"
                    android:layout_height="wrap_content" />


                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:id="@+id/week_date_range"
                    android:layout_width="match_parent"
                    android:text="march 04 - march 10"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:textSize="@dimen/small"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:id="@+id/cashlay"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:layout_width="110dp"
                    android:id="@+id/weekearning_amount"
                    android:text="$0.00"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small"
                    android:layout_height="wrap_content" />

                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:id="@+id/payment_sts"
                    android:layout_width="110dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@color/pinkborder"
                    android:text="@string/withdraw"
                    android:padding="2dp"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>