<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_back"
    tools:context=".marchant.activity.MerchantSignupSlider">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/backlay"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_margin="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_back_black_arrow" />
        </RelativeLayout>

        <main.com.ngrewards.constant.CustomViewPager
            android:id="@+id/viewpager"
            android:layout_below="@+id/indect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/continue_button"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
<LinearLayout
    android:id="@+id/indect"
    android:layout_below="@+id/backlay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >
    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicatortwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dip"
        app:centered="false"
        app:fillColor="@color/pinkborder"
        app:pageColor="@color/greyborder"
        app:snap="false" />

</LinearLayout>


        <Button
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/pink_border"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/medium" />

<ProgressBar
    android:visibility="gone"
    android:id="@+id/progresbar"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
