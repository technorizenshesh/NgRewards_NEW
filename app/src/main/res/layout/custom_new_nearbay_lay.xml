<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="4"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/marchant_img"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/placeholder" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:id="@+id/mer_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_marginTop="2dp"

                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RatingBar
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:numStars="5"
                        android:isIndicator="true"
                        android:progressDrawable="@drawable/ratingsmalldra"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:transformPivotX="5dp"
                        android:transformPivotY="5dp" />
<TextView
    android:id="@+id/rating_count"
    android:textColor="@color/black"
    android:layout_marginLeft="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="1dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_toLeftOf="@+id/distance_tv"
                        android:id="@+id/category_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:maxLines="2"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium"
                        android:visibility="visible" />
                    <TextView
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:id="@+id/distance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/black" />

                </RelativeLayout>

                <TextView
                    android:layout_marginTop="1dp"
                    android:id="@+id/mer_openstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open"
                    android:textColor="@color/red"
                    android:textSize="@dimen/medium"
                    android:visibility="visible" />


                <TextView

                    android:id="@+id/number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12334555"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/locationtv"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/extrasmall" />

                <View
                    android:layout_marginTop="3dp"
                    android:background="@color/greyborder"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"></View>

                <LinearLayout
                    android:gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="1"
                        android:id="@+id/likebut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/liketv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/like"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medium" />

                        <ImageView
                            android:id="@+id/likeimg"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            app:srcCompat="@drawable/ic_like" />

                        <TextView
                            android:id="@+id/likecount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medium" />

                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:id="@+id/paybilllay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/paybill_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/paybill_t"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medium" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            app:srcCompat="@drawable/paybill" />


                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_order"
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/order"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:id="@+id/sharelay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/share"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medium" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            app:srcCompat="@drawable/ic_share" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            </RelativeLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>