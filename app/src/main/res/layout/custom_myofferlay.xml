<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="6dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="7dp"
                android:layout_toLeftOf="@+id/offer_img"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <main.com.ngrewards.fonttypeclasses.BoldTextView
                    android:id="@+id/offer_title"
                    android:layout_width="match_parent"
                    android:text="Offer Title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/large"
                    android:layout_height="wrap_content" />
                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:id="@+id/offer_desc"
                    android:layout_width="match_parent"
                    android:text="@string/description"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <main.com.ngrewards.fonttypeclasses.NoramlTextView
                        android:id="@+id/real_price"
                        android:layout_width="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/small"
                        android:layout_height="wrap_content" />

                    <main.com.ngrewards.fonttypeclasses.NoramlTextView
                        android:id="@+id/price_discount"
                        android:layout_width="match_parent"
                        android:text=""
                        android:textColor="@color/red"
                        android:textSize="@dimen/small"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_toLeftOf="@+id/option"
                android:layout_centerVertical="true"
                android:id="@+id/offer_img"
                android:scaleType="fitXY"
                android:src="@drawable/placeholder"
                android:layout_width="90dp"
                android:layout_height="90dp" />
            <ImageView
                android:visibility="visible"
                android:layout_alignParentRight="true"
                android:id="@+id/option"
                app:srcCompat="@drawable/ic_optionmenu"
                android:layout_width="30dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>