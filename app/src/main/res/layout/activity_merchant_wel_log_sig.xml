<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MerchantWelLogSig">
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:background="@drawable/splash_back">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <RelativeLayout
                android:id="@+id/backlay"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_back_black_arrow" />

            </RelativeLayout>

            <main.com.ngrewards.fonttypeclasses.BoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/merchant"
                android:textColor="@color/black"
                android:textSize="@dimen/extralarge" />

        </RelativeLayout>


        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/merchant_ll" />

            <main.com.ngrewards.fonttypeclasses.NoramlTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/startbussell"
                android:textColor="@color/black"
                android:textSize="@dimen/large" />

            <TextView
                android:id="@+id/login_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/border_rounded"
                android:gravity="center"
                android:padding="6dp"
                android:text="@string/logintxt"
                android:textColor="@color/black"
                android:textSize="@dimen/medium" />

            <TextView
                android:id="@+id/createaccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/pink_border"
                android:gravity="center"
                android:padding="6dp"
                android:text="@string/signup"
                android:textColor="@color/white"
                android:textSize="@dimen/medium" />

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
