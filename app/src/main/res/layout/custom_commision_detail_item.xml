<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="6dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_centerVertical="true"
                android:id="@+id/marchant_img"
                android:src="@drawable/user_propf"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/marchant_img"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <main.com.ngrewards.fonttypeclasses.BoldTextView
                    android:id="@+id/mer_name_tv"
                    android:layout_width="match_parent"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium"
                    android:layout_height="wrap_content" />
                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:id="@+id/merchant_no_tv"
                    android:layout_width="match_parent"
                    android:text="Merchant no."
                    android:textColor="@color/black"
                    android:textSize="@dimen/small"
                    android:layout_height="wrap_content" />
                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:id="@+id/phone_number_tv"
                    android:layout_width="match_parent"
                    android:text="Phone no."
                    android:textColor="@color/black"
                    android:textSize="@dimen/small"
                    android:layout_height="wrap_content" />
                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:layout_width="match_parent"
                    android:text="Address"
                    android:id="@+id/address_tv"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small"
                    android:layout_height="wrap_content" />
                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:layout_width="match_parent"
                    android:text="Commission"
                    android:id="@+id/commission_amount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>