<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="main.com.ngrewards.placeorderclasses.AllAddedAddressAct">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/mainlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/toobarcolor"

                android:minHeight="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/backlay"
                    android:layout_width="40dp"
                    android:layout_height="40dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_back_black_arrow" />

                </RelativeLayout>

                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/selectashipadd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/large" />


            </RelativeLayout>

        </RelativeLayout>
        <View
            android:id="@+id/d"
            android:layout_below="@+id/mainlay"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"></View>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_below="@+id/d"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

               <main.com.ngrewards.constant.ExpandableHeightListView
                   android:layout_margin="5dp"
                   android:layout_width="match_parent"
                    android:id="@+id/addresslist"
                    android:layout_height="wrap_content">

               </main.com.ngrewards.constant.ExpandableHeightListView>
            <View
                android:layout_marginTop="10dp"
                android:layout_below="@+id/mainlay"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"></View>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:id="@+id/addaddressdlay"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="5dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/addlay"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/add" />

                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toLeftOf="@+id/forwardarrow_a"
                    android:layout_toRightOf="@+id/addlay"
                    android:text="@string/addnewaddress"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium" />

                <ImageView
                    android:id="@+id/forwardarrow_a"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/next" />

            </RelativeLayout>


        </LinearLayout>



        <ProgressBar
            android:id="@+id/progresbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
