<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="main.com.ngrewards.marchant.stripemerchantclasses.AddStripeConnectAccount">

     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/mainlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/toobarcolor"

                android:minHeight="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/backlay"
                    android:layout_width="40dp"
                    android:layout_height="40dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_back_black_arrow" />

                </RelativeLayout>

                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/addstripeaccount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small" />


            </RelativeLayout>

        </RelativeLayout>

         <View
            android:id="@+id/vv"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_below="@+id/mainlay"
            android:background="@color/greyborder"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vv"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/alreadyavbacountlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:text="@string/alreadystripeaccount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium" />

                <TextView
                    android:id="@+id/myaccountemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium" />

                <LinearLayout

                    android:id="@+id/savecardlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/savedcards"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/grey_strok_border"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/cardtype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="dd"
                            android:textColor="@color/red"
                            android:textSize="@dimen/small"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/savedcardnumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="5dp"
                                android:layout_toLeftOf="@+id/cardbrand"
                                android:padding="5dp"
                                android:text="dd"
                                android:textColor="@color/black"
                                android:textSize="@dimen/medium" />

                            <TextView
                                android:id="@+id/cardbrand"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:padding="5dp"
                                android:textColor="@color/red"
                                android:textSize="@dimen/small"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                             <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/validtill"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/extrasmall" />

                                 <TextView
                                    android:id="@+id/validdate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/small" />


                            </LinearLayout>

                             <ImageView
                                android:id="@+id/delete_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_removecart" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/adddebitcardlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v"
                    android:orientation="vertical"
                    android:visibility="gone">

                     <main.com.ngrewards.fonttypeclasses.NoramlTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="@string/adddbtcards"
                        android:textColor="@color/red"
                        android:textSize="@dimen/medium" />

                    <main.com.ngrewards.fonttypeclasses.NoramlTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="@string/ngacceptmost"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small"
                        android:visibility="gone" />


                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/grey_strok_border"
                        android:orientation="vertical">

                        <main.com.ngrewards.fonttypeclasses.NormalEditText
                            android:id="@+id/cardname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:hint="@string/nameoncard"
                            android:padding="5dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="12dp"
                            android:background="@color/darkgrey"></View>

                        <main.com.ngrewards.constant.CreditCardEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="1234567890"
                            android:inputType="number"
                            android:maxLength="16"
                            android:visibility="gone" />

                        <main.com.ngrewards.fonttypeclasses.NormalEditText
                            android:id="@+id/cardnumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:hint="@string/cardnumber"
                            android:inputType="number"
                            android:maxLength="19"
                            android:padding="5dp" />

                    </LinearLayout>

                    <main.com.ngrewards.fonttypeclasses.NoramlTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="@string/expirydate"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grey_strok_border"
                            android:padding="5dp">

                            <Spinner
                                android:id="@+id/datespinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@+id/dd"
                                android:gravity="center"
                                android:text="18"
                                android:textColor="@color/black"
                                android:textSize="@dimen/large" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/grey_strok_border"
                            android:padding="5dp">

                            <Spinner
                                android:id="@+id/yearspinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="2018"
                                android:textColor="@color/black"
                                android:textSize="@dimen/large" />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/grey_strok_border"
                        android:orientation="vertical">

                        <main.com.ngrewards.fonttypeclasses.NormalEditText
                            android:id="@+id/security_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:hint="@string/securitycode"
                            android:inputType="number"
                            android:padding="5dp" />


                    </LinearLayout>

                    <main.com.ngrewards.fonttypeclasses.NoramlTextView
                        android:id="@+id/addcardbut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="15dp"
                        android:background="@drawable/pinkborder_rectangle"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/addyourcard"
                        android:textColor="@color/white"
                        android:textSize="@dimen/large" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/accountcreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <main.com.ngrewards.fonttypeclasses.NormalEditText
                    android:id="@+id/email_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/border_rounded"
                    android:gravity="center"
                    android:hint="@string/email"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:padding="7dp"
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/acceptcondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/aceptstripterms" />

                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/pink_border"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium" />
            </LinearLayout>


        </LinearLayout>

        <ProgressBar
            android:id="@+id/prgressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
