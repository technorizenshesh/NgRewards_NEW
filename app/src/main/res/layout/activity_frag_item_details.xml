<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/mainlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/toobarcolor"

                android:minHeight="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/backlay"
                    android:layout_width="40dp"
                    android:layout_height="40dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_back_black_arrow" />

                </RelativeLayout>

                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium" />


            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/vv"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_below="@+id/mainlay"
            android:background="@color/black"></View>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/botlay"
            android:layout_below="@+id/vv"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <main.com.ngrewards.fonttypeclasses.BoldTextView
                        android:id="@+id/merchant_name"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toLeftOf="@+id/ratelay"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/blue"
                        android:textSize="@dimen/medium" />

                    <LinearLayout
                        android:id="@+id/ratelay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RatingBar
                            android:id="@+id/averagerating"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:progressDrawable="@drawable/ratingsmalldra"
                            android:scaleX="1"
                            android:scaleY="1"
                            android:transformPivotX="5dp"
                            android:transformPivotY="5dp" />

                        <TextView
                            android:id="@+id/rating_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black" />
                    </LinearLayout>


                </RelativeLayout>

                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="5dp">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/productimage_pager"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/stove" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.viewpagerindicator.CirclePageIndicator
                        android:id="@+id/fullscreen_indecator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="5dp"
                        android:gravity="bottom"
                        android:padding="10dip"
                        app:fillColor="@color/pinkborder"
                        app:pageColor="@color/darkgrey"
                        app:snap="false" />

                    <LinearLayout
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/shareproduct"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/ic_share_symbol" />

                        <ImageView
                            android:id="@+id/like_buton"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            app:srcCompat="@drawable/ic_like_blk" />

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sizelay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_grey_whtstroke"
                    android:orientation="vertical">

                    <main.com.ngrewards.fonttypeclasses.NoramlTextView
                        android:id="@+id/ssss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="2dp"
                        android:text="@string/sizes"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small" />

                    <RelativeLayout
                        android:id="@+id/touchidlay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ssss"
                        android:layout_marginBottom="2dp"
                        android:layout_toLeftOf="@+id/ft">


                        <main.com.ngrewards.fonttypeclasses.NoramlTextView
                            android:id="@+id/sizes_tv_head"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:text="@string/sizes"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medium" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/ft"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/next" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/colorlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/border_grey_whtstroke"
                    android:orientation="vertical">

                    <main.com.ngrewards.fonttypeclasses.NoramlTextView
                        android:id="@+id/sssss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="2dp"
                        android:text="@string/colours"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sssss"
                        android:layout_marginBottom="2dp"
                        android:layout_toLeftOf="@+id/ftt">


                        <main.com.ngrewards.fonttypeclasses.NoramlTextView
                            android:id="@+id/color_tv_head"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:hint="white , black"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medium" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/ftt"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/next" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/large"
                    android:textStyle="bold" />

                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:id="@+id/instock_tv"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:text="In stock : 0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium" />

                <LinearLayout
                    android:id="@+id/qnt_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/plusq"
                        android:text="@string/quanity"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium" />

                    <Button
                        android:id="@+id/plusq"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_toLeftOf="@+id/quant_tv"
                        android:background="@drawable/pluc_ic" />

                    <TextView
                        android:id="@+id/quant_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/minusq"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/large" />

                    <Button
                        android:id="@+id/minusq"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/minus_ic" />

                </LinearLayout>


                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:id="@+id/addtocart_tv"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/pinkborder_rectangle"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/addtocart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large" />


                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:id="@+id/buynow_tv"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/pinkborder_rectangle"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/buynow"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large" />


                <main.com.ngrewards.fonttypeclasses.LightTextView
                    android:id="@+id/item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:paddingBottom="2dp"
                    android:paddingTop="5dp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/black"
                    android:visibility="gone"></View>

                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/recentreview"
                    android:textColor="@color/pinkborder"
                    android:textSize="@dimen/large" />

                <main.com.ngrewards.constant.ExpandableHeightListView
                    android:id="@+id/review_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"></main.com.ngrewards.constant.ExpandableHeightListView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/black"></View>

                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:id="@+id/seeallreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="See all 0 customers reviews"
                    android:textColor="@color/red"
                    android:textSize="@dimen/medium"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/done_review_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/donereview_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="ddd"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium" />

                    <RatingBar
                        android:id="@+id/rating_done"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:progressDrawable="@drawable/ratingmediumdrable"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:stepSize="1.0"
                        android:transformPivotX="5dp"
                        android:transformPivotY="5dp" />

                    <main.com.ngrewards.fonttypeclasses.BoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"

                        android:text="@string/reviewposted"
                        android:textColor="@color/pinkborder"
                        android:textSize="@dimen/medium" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/post_review_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <main.com.ngrewards.fonttypeclasses.NoramlTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="2dp"
                        android:text="@string/sharethoughts"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small" />

                    <RatingBar
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:numStars="5"
                        android:progressDrawable="@drawable/ratingmediumdrable"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:stepSize="1.0"
                        android:transformPivotX="5dp"
                        android:transformPivotY="5dp" />

                    <main.com.ngrewards.fonttypeclasses.NormalEditText
                        android:id="@+id/comment_et"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/box"
                        android:gravity="start"
                        android:hint="@string/writecusrev"
                        android:padding="5dp" />

                    <main.com.ngrewards.fonttypeclasses.NoramlTextView
                        android:id="@+id/submit_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/pinkborder"
                        android:paddingBottom="2dp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:paddingTop="2dp"
                        android:text="@string/submitreview"
                        android:textColor="@color/white" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/black"
                    android:visibility="gone"></View>

                <main.com.ngrewards.fonttypeclasses.NoramlTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/soldby"
                    android:textColor="@color/black"
                    android:textSize="@dimen/large"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:visibility="gone">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_img"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/user_pic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/user_img"
                        android:orientation="vertical">


                        <main.com.ngrewards.fonttypeclasses.NoramlTextView
                            android:id="@+id/feedback_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="94% positive feedback"
                            android:textColor="@color/black" />


                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/black"></View>

                <RelativeLayout
                    android:id="@+id/item_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <main.com.ngrewards.fonttypeclasses.NoramlTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/itemspec"
                        android:textColor="@color/pinkborder"
                        android:textSize="@dimen/medium" />

                    <ImageView
                        android:id="@+id/itemarrow"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/uparrow" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/itemspeclay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <main.com.ngrewards.fonttypeclasses.NoramlTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/size"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium" />

                    <main.com.ngrewards.fonttypeclasses.NoramlTextView
                        android:id="@+id/sizes_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/small" />

                    <main.com.ngrewards.fonttypeclasses.NoramlTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/colours"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium" />

                    <main.com.ngrewards.fonttypeclasses.NoramlTextView
                        android:id="@+id/colors_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/small" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/black"></View>

                <RelativeLayout
                    android:id="@+id/description_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <main.com.ngrewards.fonttypeclasses.NoramlTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description"
                        android:textColor="@color/pinkborder"
                        android:textSize="@dimen/medium" />

                    <ImageView
                        android:id="@+id/description_arrow"

                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/uparrow" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/description_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <main.com.ngrewards.fonttypeclasses.NoramlTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/featurs"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium" />

                    <main.com.ngrewards.fonttypeclasses.NoramlTextView
                        android:id="@+id/description_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Dummy"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/black"></View>

                <RelativeLayout
                    android:id="@+id/shipinfo_but"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <main.com.ngrewards.fonttypeclasses.NoramlTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shipinginfo"
                        android:textColor="@color/pinkborder"
                        android:textSize="@dimen/medium" />

                    <ImageView
                        android:id="@+id/shipingarrow"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/uparrow" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/shipping_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
