<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="Enter Number Of Payment"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/medium"
                    android:textStyle="bold"
                    />


                <main.com.ngrewards.fonttypeclasses.NormalEditText
                    android:id="@+id/no_of_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:digits="0123456789"
                    android:background="@color/greyborder"
                    android:hint="Enter Number"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:padding="10dp" />

                <LinearLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:gravity="center">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="#F4F3F3"
    >
    <Button
        android:padding="5dp"
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
         android:background="@null"
        android:textColor="@color/black" />
</androidx.cardview.widget.CardView>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="1dp"
                            app:cardBackgroundColor="#F4F3F3"
                            >

                        <Button
                            android:padding="5dp"

                            android:id="@+id/submitt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/submit"
                             android:background="@null"
                            android:textColor="@color/black" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </LinearLayout>


                <TextView
                    android:visibility="gone"
                    android:id="@+id/cont_find"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/border_rounded"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="@color/black"
                    android:textSize="@dimen/large"
                    android:textStyle="bold" />


            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>